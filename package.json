{
  "name": "hotels",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "cd backend && node ./bin/www",
    "back-server": "cross-env NODE_ENV=development  DEBUG=express nodemon ./backend/bin/www",
    "front-server": "cd ./frontend && NODE_ENV=development npm run start ",
    "build": "rm -rf ./public/html/* && cd ./frontend && npm run build",
    "postbuild": "cp -r ./frontend/build/* ./public/html && rm -rf ./frontend/build"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": "2500",
    "events": {
      "crash": "sh -c 'lsof -i :${PORT:-3500} -t | xargs kill'"
    }
  }
}
